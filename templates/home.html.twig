{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron d-flex flex-column align-items-center homepageHeader">
        <img    style="height: 93px; width: 200px; display: block;"
                src="{{ asset('images/logo.png') }}" alt="Logo du site">
        <h1 class="display-3">Snowtricks</h1>
        <p class="lead">La passion du snowboard</p>
        <a href="#tricksDiv" class="headerArrow">
            <span class="fas fa-arrow-circle-down"></span>
        </a>
    </div>
    <div id="tricksDiv">
        {% if tricks | length > 0 %}
            <span class="d-flex justify-content-center mb-2">
            Il y a actuellement {{ tricks | length }} figure{% if tricks | length > 1%}s{% endif%} sur le site !
            </span>
            <div class="d-flex justify-content-center">
                {% set page = pagination.currentPage %}
                {% set pages = pagination.pages %}
                <ul class="pagination pagination-sm">
                    <li class="page-item {% if page == 1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('homepage', {'page': page - 1}) }}">&laquo;</a>
                    </li>
                    {% for i in 1..pages %}
                        <li class="page-item {% if i == page %}active{% endif %}">
                            <a class="page-link" href="{{ path('homepage', {'page': i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {% if page == pages %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('homepage', {'page': page + 1}) }}">&raquo;</a>
                    </li>
                </ul>
            </div>
            <div class="row d-flex justify-content-around mb-5">
                {% for trick in pagination.data %}
                <div class="card mb-3">
                    <h3 class="card-header"><a href="{{ path('tricks_show', {'slug': trick.slug}) }}">{{ trick.name }}</a></h3>
                    <img style="height: 10rem; width: 100%;" src="{{ asset('uploads/images/' ~ trick.coverImage) }}" alt="Image de couverture de la figure {{ trick.name }}">
                    <div class="card-body">
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            Il n'y a actuellement aucune figure enregistr√©e sur le site...
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/headerArrow.js') }}"></script>
{% endblock %}