{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Connectez vous !</h1>
                {% if hasError %}
                    <div class="alert alert-danger">
                        Nom d'utilisateur ou mot de passe invalide.
                    </div>
                {% endif %}
                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="nickname">Pseudo</label>
                        <input type="text" name="_username" id="nickname" class="form-control"
                               placeholder="Votre pseudo..." required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control"
                                placeholder="Votre mot de passe..." required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Se connecter</button>
                        <div class="float-right">
                            <a href="{{ path('account_register') }}">Créer un compte</a>
                        </div>
                    </div>
                    <div>
                        <a href="{{ path('account_reset_password') }}">Mot de passe oublié ?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
